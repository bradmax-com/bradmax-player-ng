{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": "./src",
		"baseUrl": ".",
		"outDir": "./dist/",
		"paths": {
			"@angular/*": [
				"./node_modules/@angular/*"
			],
			"@bradmax/*": [
				"./node_modules/@bradmax/*"
			]
		},
		"declaration": true,
		"strict": true,
		"moduleResolution": "node",
		"target": "es2015",
		"module": "es2015",
		"lib": [
			"es2015",
			"dom"
		],
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"inlineSources": true,
		"removeComments": true,
		"noImplicitAny": true,
		"types": [],
		"typeRoots": [
			"./node_modules/@bradmax/player/ns",
			"./node_modules/@types/"
		],
		"diagnostics": false,
		"listEmittedFiles": false,
		"traceResolution": false
	},
	"exclude": [
		"./bin/",
		"./build/",
		"./dist/",
		"./node_modules/",
		"./test/"
	],
	"angularCompilerOptions": {
		"trace": true,
		"fullTemplateTypeCheck": true,
		"preserveWhitespaces": false,
		"skipTemplateCodegen": true,
		"annotateForClosureCompiler": true,
		"strictMetadataEmit": true
	}
}
