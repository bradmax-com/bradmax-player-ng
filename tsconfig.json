{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": "./src",
		"baseUrl": ".",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"inlineSources": true,
		"target": "es5",
		"skipLibCheck": true,
		"removeComments": true,
		"lib": [
			"es2015",
			"dom"
		],
		"typeRoots": [
			"node_modules/@bradmax/player/ns",
			"node_modules/@types/"
		]
	},
	"exclude": [
		"./bin/",
		"./build/",
		"./dist/",
		"./node_modules/",
		"./test/"
	]
}
